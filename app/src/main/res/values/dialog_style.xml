<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the background color of the dialog -->
        <item name="android:windowBackground">@color/black</item>
        <!-- Customize the font color of the dialog -->
        <item name="android:textColorPrimary">@color/bright_white</item>
        <!-- Customize the color of the positive button -->
        <item name="colorAccent">@color/green_rating</item>
        <!-- Customize the color of the negative button -->
        <item name="android:textColorSecondary">@color/accent</item>
    </style>


</resources>
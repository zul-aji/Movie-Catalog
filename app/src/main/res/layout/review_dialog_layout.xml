<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="328dp"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/review_box"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#282828"
            android:padding="@dimen/activity_vertical_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:text="Review"
                android:textColor="@color/bright_white"
                android:textSize="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_1"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_2"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_3"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_4"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_5"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_6"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_7"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_8"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:id="@+id/star_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/star_margin"
                android:layout_marginTop="16dp"
                android:src="@drawable/star_unpicked"
                app:layout_constraintBottom_toTopOf="@+id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="@id/star_9"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/clear_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:fontFamily="@font/ibm_plex_sans"
                android:text="Clear Stars"
                android:textAlignment="center"
                android:textColor="@color/accent"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/star_1"
                app:layout_constraintVertical_bias="1" />

            <EditText
                android:id="@+id/review_content"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/review_input_bg"
                android:ems="10"
                android:fontFamily="@font/ibm_plex_sans"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="6dp"
                android:textSize="12dp"
                android:hint="Текст обзора..."
                app:layout_constraintBottom_toTopOf="@id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clear_star"
                app:layout_constraintVertical_bias="0" />

            <TextView
                android:id="@+id/is_anon"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ibm_plex_sans"
                android:text="Is Anonymous"
                android:textColor="@color/bright_white"
                app:layout_constraintBottom_toTopOf="@id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review_content"
                app:layout_constraintVertical_bias="0" />

            <CheckBox
                android:id="@+id/is_anon_cb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/bright_white"
                app:layout_constraintBottom_toTopOf="@id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@id/is_anon"
                app:layout_constraintTop_toBottomOf="@id/review_content"
                app:layout_constraintVertical_bias="0" />

            <Button
                android:id="@+id/save_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="14dp"
                android:background="@drawable/genre_bg"
                android:fontFamily="@font/ibm_plex_sans_bold"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/bright_white"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@id/cancel_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/is_anon" />

            <TextView
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:clickable="true"
                android:fontFamily="@font/ibm_plex_sans"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/accent"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review"
                app:layout_constraintVertical_bias="1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>